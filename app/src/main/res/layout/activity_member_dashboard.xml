<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8">

    <!-- Page Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="12dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back_button"
                android:layout_alignParentStart="true" />

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/member_dashboard_title"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/backButton"
                android:layout_centerVertical="true"
                android:gravity="center" />

            <!-- Logout Button -->
            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_logout"
                android:background="@android:color/transparent"
                android:contentDescription="@string/logout_button"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- Card 1: Book Catalogue -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <!-- Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_library"
                android:contentDescription="@string/book_catalogue" />

            <!-- Card Body -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Card Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_catalogue"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <!-- Card Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/browse_available_books_member_dashboard"
                    android:textColor="#455A64"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Action Button -->
            <Button
                android:id="@+id/browse_books_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/browse_member_dashboard"
                android:backgroundTint="#111827"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Card 2: My Requests -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <!-- Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_requests"
                android:contentDescription="@string/requests" />

            <!-- Card Body -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Card Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_requests"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <!-- Card Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_your_book_requests"
                    android:textColor="#455A64"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Action Button -->
            <Button
                android:id="@+id/view_my_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_member_dashboard"
                android:backgroundTint="#111827"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Card 3: Profile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <!-- Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_member_list"
                android:contentDescription="@string/profile" />

            <!-- Card Body -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Card Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <!-- Card Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile_settings"
                    android:textColor="#455A64"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Action Button -->
            <Button
                android:id="@+id/edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:backgroundTint="#111827"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
