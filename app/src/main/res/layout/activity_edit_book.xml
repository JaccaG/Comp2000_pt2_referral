<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6F8"
    android:padding="16dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="12dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_book_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toEndOf="@id/backButton"
            android:layout_centerVertical="true"
            android:gravity="center"/>
    </RelativeLayout>

    <!-- Scroll Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <!-- Form Container -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <!-- Book Title Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/book_title_edit_book"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="6dp"/>

            <!-- Book Title Input -->
            <EditText
                android:id="@+id/inputTitle"
                android:layout_width="340dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:autofillHints=""
                android:background="@drawable/search_background"
                android:inputType="textCapWords"
                android:padding="12dp"
                android:textColor="@color/black"
                tools:ignore="LabelFor,SpeakableTextPresentCheck" />

            <!-- Author Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/author_edit_book"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"/>

            <!-- Author Input -->
            <EditText
                android:id="@+id/inputAuthor"
                android:layout_width="340dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:autofillHints=""
                android:background="@drawable/search_background"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="@color/black"
                tools:ignore="LabelFor,SpeakableTextPresentCheck" />

            <!-- ISBN Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/isbn_edit_book"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"/>

            <!-- ISBN Input (disabled) -->
            <EditText
                android:id="@+id/inputIsbn"
                android:layout_width="340dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/search_background"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp"
                android:autofillHints=""
                android:textColor="@color/black"
                tools:ignore="LabelFor,SpeakableTextPresentCheck" />

            <!-- Status Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/status_edit_book"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"/>

            <!-- Availability Checkbox -->
            <CheckBox
                android:id="@+id/checkboxAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/available_for_borrowing_edit_book" />

            <!-- Save Changes Button -->
            <Button
                android:id="@+id/btnSaveBook"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/save_changes_edit_book"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0F172A"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
