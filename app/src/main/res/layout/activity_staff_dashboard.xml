<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8">

    <!-- Page Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="17dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="12dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/back_button"
                android:background="#F5F6F8"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/staff_dashboard"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Logout Button -->
            <ImageButton
                android:layout_toEndOf="@id/titleText"
                android:layout_marginStart="40dp"
                android:id="@+id/logoutButton"
                android:layout_width="48dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_logout"
                android:contentDescription="@string/logout_button"
                android:background="#F5F6F8"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card 1: Members -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <!-- Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_member_list"
                    android:contentDescription="@string/member_list" />

                <!-- Card Body -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/members"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/manage_library_members"
                        android:textColor="#455A64"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Action Button -->
                <Button
                    android:id="@+id/view_library_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#111827"
                    android:text="@string/view_library_members"
                    android:textColor="#FFFFFF"
                    tools:ignore="DuplicateSpeakableTextCheck" />
            </LinearLayout>

            <!-- Card 2: Book Catalogue -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <!-- Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_library"
                    android:contentDescription="@string/app_icon" />

                <!-- Card Body -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/book_catalogue"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/manage_book_inventory"
                        android:textColor="#455A64"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Action Button -->
                <Button
                    android:id="@+id/view_book_catalogue_staff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_book_catalogue_staff"
                    android:backgroundTint="#111827"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Card 3: Requests -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <!-- Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_requests"
                    android:contentDescription="@string/requests_icon" />

                <!-- Card Body -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/requests"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/handle_member_requests"
                        android:textColor="#455A64"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Action Button -->
                <Button
                    android:id="@+id/view_book_requests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_book_requests"
                    android:backgroundTint="#111827"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Card 4: Issued Books -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <!-- Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_clock"
                    android:contentDescription="@string/requests_icon" />

                <!-- Card Body -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/issued_books"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/books_issued_to_a_member"
                        android:textColor="#455A64"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Action Button -->
                <Button
                    android:id="@+id/view_issued_books"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_book_requests"
                    android:backgroundTint="#111827"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
