<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6F8"
    android:padding="16dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="12dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_member_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- Scroll Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <!-- Form Container -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Full Name Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/full_name_add_member"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="6dp"/>

            <!-- Full Name Input -->
            <EditText
                android:id="@+id/inputFullName"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:autofillHints="John Smith"
                android:background="@drawable/search_background"
                android:hint="@string/enter_full_name_add_member"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="#616161" />

            <!-- Email Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/email_add_member"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"/>

            <!-- Email Input -->
            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:autofillHints="JohnSmith@example.com"
                android:background="@drawable/search_background"
                android:hint="@string/enter_email_address_add_member"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="#616161" />

            <!-- Contact Number Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/contact_number_add_member"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"/>

            <!-- Contact Number Input -->
            <EditText
                android:id="@+id/inputContact"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:autofillHints="05050 050505"
                android:background="@drawable/search_background"
                android:hint="@string/enter_contact_number_add_member"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="#616161" />

            <!-- Member Since Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/member_since_add_member"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"/>

            <!-- Member Since Input -->
            <EditText
                android:id="@+id/inputMemberSince"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:autofillHints="1999-01-01"
                android:background="@drawable/search_background"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/yyyy_mm_dd_add_member"
                android:inputType="date"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="#616161" />

            <!-- Add Member Button -->
            <Button
                android:id="@+id/btnAddMember"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="@string/add_member_add_member"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0F172A"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
