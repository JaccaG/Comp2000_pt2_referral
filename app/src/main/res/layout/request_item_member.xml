<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/statusBadge"
            android:text="@string/book_item_member_novel_ex"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/statusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:text="@string/pending_request_item"
            android:textColor="#000000"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/badge_pending"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/lineRequested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_item_member_date"
        android:textColor="#4B5563"
        android:textSize="13sp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/lineA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_item_member_est"
        android:textColor="#2563EB"
        android:textSize="13sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/lineB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_item_member_pickup"
        android:textColor="#2563EB"
        android:textSize="13sp"
        android:layout_marginTop="2dp"/>
</LinearLayout>
