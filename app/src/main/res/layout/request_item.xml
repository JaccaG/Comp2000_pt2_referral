<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/statusBadge">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/the_great_novel_request_item"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/requestedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/requested_by_john_smith_request_item"
                android:textColor="#4B5563"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/statusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:background="@drawable/badge_pending"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:text="@string/pending_request_item"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/infoLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/requested_date_request_item"
            android:textColor="#4B5563"
            android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/infoLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/est_approval_request_item"
            android:textColor="#4B5563"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pending_request_item"
        android:textSize="12sp"
        android:textColor="#111827"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/approveBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/btn_approve"
            android:backgroundTint="@null"
            android:text="@string/approve_request_item"
            android:textAllCaps="false"
            android:textColor="#283593"
            app:backgroundTint="@null"
            tools:ignore="VisualLintButtonSize" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/denyBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/btn_deny"
            android:backgroundTint="@null"
            android:text="@string/deny_request_item"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:backgroundTint="@null"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>
</LinearLayout>
